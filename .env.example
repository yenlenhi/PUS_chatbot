# ============================================
# PostgreSQL Configuration (NEW)
# ============================================
POSTGRES_USER=uni_bot_user
POSTGRES_PASSWORD=uni_bot_password
POSTGRES_DB=uni_bot_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://uni_bot_user:uni_bot_password@localhost:5432/uni_bot_db

# ============================================
# pgAdmin Configuration (Optional)
# ============================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# LLM Provider Configuration
# ============================================
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
GEMINI_API_KEY=your_gemini_api_key_here
ENABLE_GEMINI_NORMALIZATION=true

# ============================================
# Embedding Model Configuration
# ============================================
EMBEDDING_MODEL=bkai-foundation-models/vietnamese-embedding-v1

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# ============================================
# RAG Configuration
# ============================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=15
SIMILARITY_THRESHOLD=0.35

# ============================================
# Hybrid Retrieval Configuration
# ============================================
DENSE_WEIGHT=0.7
DENSE_SIMILARITY_THRESHOLD=0.35
SPARSE_SIMILARITY_THRESHOLD=0.1

# ============================================
# Ingestion Service Configuration
# ============================================
PDF_WATCH_DIR=data/pdfs
PROCESSED_PDF_DIR=data/processed
INGESTION_CHECK_INTERVAL=60
AUTO_INGEST_ON_STARTUP=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
